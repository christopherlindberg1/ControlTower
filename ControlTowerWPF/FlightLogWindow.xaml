<Window x:Class="ControlTowerWPF.FlightLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlTowerWPF"
        mc:Ignorable="d"
        Title="FlightLogWindow" Height="450" Width="800">
    <Grid Margin="15 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!--Row 1-->
        <TextBlock Text="The complete flight log" FontSize="16"/>

        <!--Row 2-->
        <ListBox x:Name="listBoxLogLines" Grid.Row="1"/>
    </Grid>
</Window>
